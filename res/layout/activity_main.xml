<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/signalStrengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        />

    <TextView
        android:id="@+id/signalStrengthTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="LTE Signal Strength"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewRSRP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
        android:text="= RSRP 2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/cellIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/textViewRSRP"
         />

    <TextView
        android:id="@+id/textViewCellID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        android:text="= Cell ID"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/cellMccTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/textViewCellID"
        />

    <TextView
        android:id="@+id/cellMncTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        android:layout_below="@+id/cellMccTextView"
        />

    <TextView
        android:id="@+id/cellPciTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/cellMncTextView"
         />

    <TextView
        android:id="@+id/cellTacTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/cellPciTextView"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:text="= MCC"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:text="= MNC"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:text="= PCI"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:text="= TAC"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:text="= RSRP 1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>